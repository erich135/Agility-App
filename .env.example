# Example environment variables
# Copy to .env (local) and set in your hosting provider (e.g., Vercel).
# Do NOT commit real secrets.

# Supabase
SUPABASE_URL=https://<your-project-ref>.supabase.co
VITE_SUPABASE_URL=https://<your-project-ref>.supabase.co
VITE_SUPABASE_ANON_KEY=<your-anon-key>

# Serverless/Admin (Vercel API routes)
SUPABASE_SERVICE_ROLE_KEY=<your-service-role-key>

# SMTP (used by /api/send-email-simple and /api/send-email-otp in production)
EMAIL_HOST=mail.example.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=info@example.com
EMAIL_PASSWORD=<smtp-password>
EMAIL_FROM_NAME=Agility
EMAIL_FROM_ADDRESS=info@example.com

# Development
VITE_DEV_MODE=true